{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist/api",
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "types": ["node", "@vercel/node"]
    },
    "include": ["api/**/*", "server/**/*"],
    "exclude": ["node_modules", "dist", "src"]
  }